@page
@model Logic_Restaurant_Razor_App.Pages.CountriesModel
@{
	ViewData["Title"] = "Countries";
}

<h1>Welcome to the list of @Model.Countries!</h1>

<div class="countries-container">
	<div class="countries-card">
		<img src="https://cdn.britannica.com/33/4833-050-F6E415FE/Flag-United-States-of-America.jpg" alt="USA Flag" />
		<h3>USA</h3>
		<p>Capital: Washington, D.C.</p>
		<p>Population: 331 million</p>
		<button class="btn">See More</button>
	</div>

	<div class="countries-card">
		<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a5/Flag_of_the_United_Kingdom_%281-2%29.svg/1280px-Flag_of_the_United_Kingdom_%281-2%29.svg.png" alt="UK Flag" />
		<h3>United Kingdom</h3>
		<p>Capital: London</p>
		<p>Population: 67 million</p>
		<button class="btn">See More</button>
	</div>

	<div class="countries-card">
		<img src="https://upload.wikimedia.org/wikipedia/en/thumb/b/ba/Flag_of_Germany.svg/250px-Flag_of_Germany.svg.png" alt="Germany Flag" />
		<h3>Germany</h3>
		<p>Capital: Berlin</p>
		<p>Population: 83 million</p>
		<button class="btn">See More</button>
	</div>

	<div class="countries-card">
		<img src="https://upload.wikimedia.org/wikipedia/en/c/c3/Flag_of_France.svg" alt="France Flag" />
		<h3>France</h3>
		<p>Capital: Paris</p>
		<p>Population: 37 million</p>
		<button class="btn">See More</button>
	</div>
</div>
